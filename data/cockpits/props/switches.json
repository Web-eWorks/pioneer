[
	{
		"id": "switch_generic",
		"model": "switch_generic",
		"tooltip": "cockpit/SWITCH_UNASSIGNED",
		"style": "default",
		"template": true,
		"labels": {
			"top": "cockpit/ON",
			"bottom": "cockpit/OFF"
		},
		"modules": {
			"toggle": {
				"type": "ToggleSwitch",
				"animation": "toggle",
				"trigger": {
					"tag": "tag_toggle",
					"type": "box"
				}
			}
		}
	},

	{
		"id": "switch_boxed",
		"inherit-from": "switch_generic",
		"template": true,
		"modules": {
			"shield": {
				"type": "Model",
				"model": "switch_w_sides"
			}
		}
	},

	{
		"id": "switch_shielded",
		"model": "switch_shielded",
		"tooltip": "cockpit/SWITCH_UNASSIGNED",
		"template": true,
		"labels": {
			"top": {
				"tag": "label_top_shielded",
				"text": "cockpit/ON"
			},
			"bottom": {
				"tag": "label_bottom_shielded",
				"text": "cockpit/OFF"
			}
		},
		"modules": {
			"toggle": {
				"type": "ToggleSwitch",
				"model": "switch_generic"
			},
			"toggle_shield": {
				"type": "ToggleSwitch"
			}
		}
	},

	{
		"id": "switch_rotation_damping",
		"inherit-from": "switch_generic",
		"tooltip": "cockpit/SWITCH_RCS_ON",
		"label:top": "cockpit/RCS_ON",
		"module:toggle": {
			"state": "ship:GetRotationDamping()",
			"action": "fc:Action('BindToggleRotationDamping')"
		}
	},
	{
		"id": "switch_speed_limiter",
		"inherit-from": "switch_boxed",
		"tooltip": "cockpit/SWITCH_LIMIT_SPEED",
		"label:top": "cockpit/SPEED_LIMIT",
		"module:toggle": {
			"state": "ship:GetSpeedLimit() and true or false",
			"action": "fc:Action('BindToggleSpeedLimiter')"
		}
	},
	{
		"id": "switch_test",
		"inherit-from": "switch_shielded",
		"module:toggle": {
			"state": "_test",
			"action": "_test = not _test"
		}
	}
]
